{
  "name": "prod-console",
  "version": "1.0.0",
  "description": "Console wrapper for browsers that disables or enables the output",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && mkdir dist && node_modules/@babel/cli/bin/babel.js src --out-dir dist",
    "checkJS": "tsc --allowJs --checkJs --noEmit --target ES5 src/*.js",
    "docs": "jsdoc2md ./src/lib/prodConsole.js > ./docs/API.md"
  },
  "keywords": [],
  "author": "Zakhar Kononov (zorgizorgik@gmail.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zorgick/prodConsole.git"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.4",
    "@babel/plugin-transform-modules-commonjs": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "babel-eslint": "^10.0.2",
    "cross-env": "^5.2.0",
    "husky": "^3.0.0",
    "jsdoc-to-markdown": "^5.0.3",
    "lint-staged": "^9.1.0",
    "prettier": "^1.18.2",
    "standard": "^14.3.1",
    "typescript": "^3.7.2"
  },
  "engines": {
    "node": ">=8.10.9"
  },
  "files": [
    "dist",
    "README.md",
    "docs/API.md"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current",
            "browsers": "> 0.2%, not dead, not ie > 0"
          },
          "modules": false
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-transform-modules-commonjs"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "src/**/*.test.js"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "jsxBracketSameLine": true
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "standard --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run checkJS && npm run docs && git add"
    }
  }
}
